{
  "name": "dim-api",
  "version": "1.0.0",
  "description": "Destiny Item Manager API Server",
  "main": "api/index.js",
  "repository": "https://github.com/DestinyItemManager/dim-api",
  "author": "Ben Hollis <ben@benhollis.net>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --respawn -P tsconfig.json -r dotenv/config ./api/index.ts",
    "build:api": "tsc -p ./api/tsconfig.json",
    "docker:build": "rm -rf dist && yarn build:api && docker build -t destinyitemmanager/dim-api .",
    "docker:run": "docker run -p 3000:3000 destinyitemmanager/dim-api:latest",
    "docker:push": "docker push destinyitemmanager/dim-api:latest",
    "lint": "eslint --fix api --ext .js,.ts",
    "lint-check": "eslint api --ext .js,.ts",
    "test": "JWT_SECRET=secret jest --coverage api",
    "test:watch": "JWT_SECRET=secret jest --watch"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/express-jwt": "^0.0.42",
    "@types/jest": "^25.1.2",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.149",
    "@types/morgan": "^1.7.37",
    "@types/pg": "^7.11.2",
    "@types/statsd-client": "^0.4.0",
    "@types/superagent": "^4.1.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "db-migrate": "^0.11.6",
    "db-migrate-pg": "^1.0.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "jest": "^25.1.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "bungie-api-ts": "^2.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "pg": "^7.15.1",
    "statsd-client": "^0.4.4",
    "superagent": "^5.1.0",
    "uuid": "^3.4.0"
  }
}
